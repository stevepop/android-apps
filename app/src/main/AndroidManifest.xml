<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stevepop.mylistviewapp" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ListViewHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListViewWithSimpleAdapter"
            android:label="@string/title_activity_list_view_with_simple_adapter" >
        </activity>
        <activity
            android:name=".ListViewWithBaseAdapter"
            android:label="@string/title_activity_list_view_with_base" >
        </activity>
        <activity
            android:name=".ListViewWithListActivity"
            android:label="@string/title_activity_list_view_with_list" >
        </activity>
    </application>

</manifest>
